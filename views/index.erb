<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Links</title>
  </head>
  <body>
    <ul>
      <% @links.each do |link| %>
        <h1>
          <li id="link-<%= link.id %>">
            <a href="<%= link.url %>"><%= link.title %></a>
          <form action="/delete" method="post">
            <input type="hidden" name="id" value="<%= link.id %>">
            <input type="submit" value="Delete link">
          </form>
        </li>
        </h1>
      <% end %>
    </ul>
    <!-- <br> -->
    <form action="/new" method="GET">
        <input type="submit" value="Add link">
    </form>

  </body>
</html>
